    "version": "0.0.9",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test:jest": "jest tests",
        "clean": "rimraf pkg dist",
        "build": "rustup run nightly-2020-01-30 wasm-pack build --out-name index --target nodejs",
        "build:publish": "wasm-pack publish",
        "clean:target": "rimraf pkg dist target",
        "test:cargo:node": "wasm-pack test --node",
        "test:cargo:safari": "wasm-pack test --safari --headless",
        "test:cargo:chrome": "wasm-pack test --chrome --headless",
        "test:cargo:firefox": "wasm-pack test --firefox --headless",
        "lint:js": "eslint --ignore-path .gitignore pkg/**/*.js",
        "lint:fix": "eslint --cache --color --ext .jsx,.js tests --fix",
        "nuke:fosho": "rimraf pkg dist node_modules submodules package-lock.json",
        "build:web": "rimraf dist pkg && webpack -p --progress --config build/webpack.web.babel.js",
        "build:node": "rimraf dist pkg && webpack -p --progress --config build/webpack.node.babel.js",
        "build:bundler": "rimraf dist pkg && webpack -p --progress --config build/webpack.bundler.babel.js",
        "build:nomodule": "rimraf dist pkg && webpack -p --progress --config build/webpack.nomodule.babel.js",
        "start:Dev": "rimraf dist pkg && webpack-dev-server --open -d --progress --color --config build/webpack.dev.js"
    },
    "husky": {
        "hooks": {}
    },
